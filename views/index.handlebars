<div class="jumbotron">
  <h1 class="display-4">Travel Bucketlist</h1>
  <hr class="my-4">
  <h2>Add a City</h2>
  <form class="create-form">

  <div class="form-group">
    <label for="ci">City Name:</label>
    <input type="text" id="ci" name="name">
  </div>

  <div class="form-group">
    <label for="fly">Have you been there?</label><br>
    <input type="radio" name="fly" value="true" checked> Yes<br>
    <input type="radio" name="fly" value="false"> No
  </div>

  <button type="submit" class="btn btn-info">Add City</button>
</form>
</div>

<div class="container">
   <div class="row">

     <div class="col">
      <div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
          <div class="card-header">Going to Visit!</div>
          <div class="card-body">
        <ul>
          {{#each travel}}
            {{#unless fly}}
              {{> travel/travels-block fly=true}}
            {{/unless}}
          {{/each}}
        </ul>
        </div>
      </div>
      </div>

    <div class="col">
      <div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
          <div class="card-header">Already visited!</div>
            <div class="card-body">
        <ul>
          {{#each travel}}
            {{#if fly}}
              {{> travel/travels-block fly=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
      </div>
  </div>

</div>
</div>