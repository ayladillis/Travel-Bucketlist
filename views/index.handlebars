<h1>Travel Bucketlist</h1>

<h2>Going to visit!</h2>

<ul>
  {{#each travel}}
    {{#unless fly}}
      {{> travel/travels-block fly=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Already visited!</h2>

<ul>
  {{#each travel}}
    {{#if fly}}
      {{> travel/travels-block fly=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a City</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ci">City Name:</label>
    <input type="text" id="ci" name="name">
  </div>

  <div class="form-group">
    <label for="fly">Have you been there?</label><br>
    <input type="radio" name="fly" value="true" checked> Yes!<br>
    <input type="radio" name="fly" value="false"> No
  </div>

  <button type="submit">Add City</button>
</form>